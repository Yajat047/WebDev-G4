<!DOCTYPE html>
<html>
<head>
    <title>Uploaded Files</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 50px;
        }
        .file-item {
            border: 1px solid #ccc;
            padding: 10px;
            margin: 10px 0;
        }
        .error {
            color: red;
            background-color: lightcoral;
            padding: 10px;
            margin: 10px 0;
        }
        a {
            color: blue;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>Uploaded Files</h1>
    
    {{#if error}}
        <div class="error">{{error}}</div>
    {{/if}}
    
    {{#if files}}
        {{#each files}}
            <div class="file-item">
                <h3><a href="/uploads/{{this.name}}" target="_blank">{{this.name}}</a></h3>
                <p><strong>Size:</strong> {{this.size}}</p>
                <p><strong>Uploaded:</strong> {{this.uploadDate}}</p>
            </div>
        {{/each}}
    {{else}}
        {{#unless error}}
            <p>No files uploaded yet.</p>
        {{/unless}}
    {{/if}}
    
    <br>
    <a href="/upload">Upload Files</a> | 
    <a href="/home">Home</a> | 
    <a href="/products">Products</a>
</body>
</html>
